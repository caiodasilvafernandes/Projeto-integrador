<%- include("partials/header")%>
<link rel="stylesheet" type="text/css" href="/CSS/form.css" />
<link rel="stylesheet" type="text/css" href="/CSS/index.css" />
<link rel="stylesheet" type="text/css" href="/CSS/payment.css" />

<style>
  @media (max-height: 765px) {
    body {
      overflow-y: visible;
    }
  }
  .qr {
    width: 250px;
    height: 250px;
  }
  .container {
    margin: 0 auto;
    text-align: center;
    width: 600px;
  }
</style>

<body>
  <%- include("partials/hudLog")%>

  <div class="steps container">
    <div class="step">1</div>
    <div class="line step"></div>
    <div class="step step">2</div>
  </div>

  <div align="center">
  <form class="pForm form-control" style="height: fit-content;">
    <h1 class="title">Pix</h1>
    <p class="subTitle">Escaneie o QR code</p>

    <div class="linha"></div>

    <img class="qr" src="<%= qrCode.imagemQrcode%>"/>
    <p class="subTitle">A cobrança do pix ficara disponível por 5 minutos.</p>

    <div class="linha"></div>

    <h1 class="subTitle">or</h1>
    <p class="subTitle" style=" overflow-wrap: break-word; height: fit-content;">
      <%= cobranca.pixCopiaECola %>
    </p>
  </form>
</div>
</body>